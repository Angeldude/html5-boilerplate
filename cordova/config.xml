<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="2" id="io.github.dakom.test.cordova" ios-CFBundleVersion="2.0" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Boilerplate</name>
    <description>
        HTML5 Boilerplate (Mostly for games)
    </description>
    <author email="dakom@users.noreply.github.com" href="https://github.com/dakom/html5-boilerplate">
        David Komer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <plugin name="cordova-plugin-console" spec="1.0.7" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="android" spec="~6.2.3" />
    <engine name="ios" spec="~4.4.0" />
</widget>
